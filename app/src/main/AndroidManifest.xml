<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.instantmusic.appmovil"
    >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <supports-screens
        android:largeScreens="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:xlargeScreens="true" />
    <application

        android:allowBackup="true"
        android:icon="@drawable/unknown"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MusicApp"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
        <activity android:name=".Login"></activity>
        <activity android:name=".Recover"></activity>
        <activity android:name=".Regist"></activity>
        <activity android:name=".Search"></activity>
        <activity android:name=".Friends"></activity>
        <activity android:name=".Podcasts"></activity>
        <activity android:name=".Settings"></activity>
        <activity android:name=".Song"></activity>
        <activity android:name=".Playlists"></activity>
        <activity android:name=".remoteServer"></activity>
    </application>

</manifest>